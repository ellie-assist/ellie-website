---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{title}</title>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="url" content="https://ellieai.com" />
    <link
      rel="icon"
      type="image/png"
      href="https://ellieai.com/assets/favicon32.png"
    />
    <meta
      name="description"
      content="Ellie learns from your writing style and crafts replies as if they were written by you"
    />
    <!-- Meta Image Stuff -->
    <meta property="og:image" content="https://ellieai.com/assets/meta.png" />
    <meta
      property="og:image:secure_url"
      content="https://ellieai.com/assets/meta.png"
    />
    <meta property="og:image:type" content="image/png" />
    <meta
      property="og:image:alt"
      content="Ellie - Your AI Email Assistant, learns from your writing style and crafts replies as if they were written by you"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="628" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ellieai.com" />
    <meta property="og:title" content="Ellie - Your AI Email Assistant" />
    <meta
      property="og:description"
      content="Ellie learns from your writing style and crafts replies as if they were written by you"
    />
    <meta property="og:site_name" content="EllieAI" />
    <meta property="og:logo" content="https://ellieai.com/assets/logo.png" />
