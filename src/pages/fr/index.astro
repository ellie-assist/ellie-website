    <!-- <HeaderText>Features</HeaderText> -->
    <section class="section-full image-section">
      <div class="section-text-full">
        <h2>{t("features:context.title")}</h2>
        <Trans i18nKey="context.content" ns="features">
          <p class="subtitle">
            Ellie takes context from the email thread to
            <Text important>craft intelligent replies</Text>.
          </p>
          <p class="subtitle">
            We promise you'll be blown away by Ellie's responses!
          </p>
        </Trans>
      </div>
      <div class="full-width-image-container">
        <picture role="presentation" class="context-image">
          <source
            class="context-image-vertical"
            media="(max-width: 850px)"
            srcset="/assets/images/ellie-context-vertical.png"
          />
          <img
            src="/assets/images/ellie-context.png"
            alt="Showing Ellie write a context filled email"
          />
        </picture>
      </div>
    </section>

    {locale === "en" ? <DemoBanner /> : null}

    <section class="section image-section image-left">
      <figure>
        <div class="image-container" style="border:0">
          <img
            style="border:0"
            src="/assets/images/ellie-with-file.png"
            role="presentation"
            alt="Showing Ellie learned information about our company taxes, and used that in it's reply"
            class="example-image"
          />
        </div>
      </figure>

      <div class="section-text">
        <h2>{t("features:learning.title")}</h2>
        <p>
          <Trans i18nKey="learning.content" ns="features">
            Ellie can <strong>learn any information you provide</strong>, and
            use that information in it's replies.
          </Trans>
        </p>
        <div class="inline-review">
          <Stars />
          <blockquote>
            <p class="review-text">
              <Trans i18nKey="victor" ns="testimonials">
                Ellie saves me so much time, it's now <span
                  class="review-highlight">my favourite productivity tool!</span
                >
              </Trans>
            </p>
            <p class="review-author">- Victor M</p>
          </blockquote>
        </div>
      </div>
    </section>

    <section class="section image-section image-right">
      <div class="section-text">
        <h2>{t("features:multilingual.title")}</h2>
        <p>
          <Trans i18nKey="multilingual.content" ns="features">
            Ellie will reply in <strong>any language</strong> to match the email
            being replied to.
          </Trans>
        </p>
        <div class="inline-review">
          <Stars />
          <blockquote>
            <p class="review-text">
              <Trans i18nKey="julie" ns="testimonials">
                I struggled to compose formal emails in English, but now Ellie
                writes them and <span class="review-highlight"
                  >saves me SO much time!</span
                > ü§©
              </Trans>
            </p>
            <p class="review-author">- Julie Berteaux</p>
          </blockquote>
        </div>
      </div>
      <div class="image-container">
        <img
          src="/assets/language.png"
          role="presentation"
          alt="Showing Ellie write a context filled email"
          class="example-image"
        />
      </div>
    </section>

