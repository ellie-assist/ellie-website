    <section class="section image-section image-left">
      <Video
        innerClass="hero-img"
        client:visible
        url="https://ellie.b-cdn.net/context.mov"
      />
      <div class="section-text">
        <h2>{t("features:tailor.title")}</h2>
        <p>
          <Trans i18nKey="tailor.content" ns="features">
            You can provide <strong>extra context</strong> to Ellie for the perfect
            reply for every email.
          </Trans>
        </p>
        <div class="inline-review">
          <Stars />
          <blockquote>
            <p class="review-text">
              <Trans i18nKey="joan" ns="testimonials">
                With Ellie
                <span class="review-highlight">I can answer every email</span>
                and not waste any time.
              </Trans>
            </p>
            <p class="review-author">- Joan</p>
          </blockquote>
        </div>
      </div>
    </section>

    <hr />
    <HeaderText>Pricing</HeaderText>
    <NewPricingComponent translations={p} locale={locale} />

    {locale === "en" ? <DownloadComponent /> : null}

    <br /><br /><br /><br /><br /><br />
    <HeaderText>FAQ</HeaderText>
    <FAQ />
  </div>
</Main>

<style>
  .subtitle {
    margin-bottom: 1em;
    text-align: center;
    font-weight: 500;
    opacity: 0.85;
    max-width: 570px;
  }
</style>
